{
  "extension": [
    ".ts"
  ],
  "include": [
    "**/*.js",
    "**/*.ts"
  ],
  "exclude": [
    "coverage",
    "node_modules",
    "**/*.d.ts",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "reporter": [
    "lcov",
    "text",
    "text-summary",
    "html"
  ],
  "report-dir": "./coverage"
}
